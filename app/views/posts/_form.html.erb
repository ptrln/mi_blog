<% @post.errors.full_messages.each do |error| %>
  <p style='color: red;'><%= error %></p>
<% end %>

<%= form_for(@post) do |f| %>

  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Post" %><br />
    <%= f.text_area :body, rows: "5", class: "span10" %>
  </div>

  <%= f.submit %>
<% end %>